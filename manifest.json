{
  "manifest_version" : 2,

  "name" : "Random Vin!",
  "description" : "Generates a random real vin number and copies it to your clipboard",
  "version" : "1.0",

  "browser_action" : {
    "default_icon" : "icon.png",
    "default_popup" : "popup.html"
  },

  "content_security_policy": "script-src 'self' https://www.google.com/jsapi; object-src 'self'",

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "*://*/*",
    "storage"
  ]

}
